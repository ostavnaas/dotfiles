apiVersion: v1
kind: Service
metadata:
  name: api
spec:
  selector:
    app.kubernetes.io/name: api
  ports:
  - name: name-of-service-port
    protocol: TCP
    port: 80
    targetPort: http

fqdn for that service:
  - api
  - api.<namespace>
  - api.<namespace>.svc
  - api.<namespace>.svc.cluster.local


DNS SRV lookups:
_srv._tcp.name-of-service-port.api.<namespace>.svc.cluster.local
