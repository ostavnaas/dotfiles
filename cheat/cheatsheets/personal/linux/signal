SIGTSTP         20
SIGTTIN         21
SIGTTOU         22
SIGURG          23
SIGXCPU         24
SIGXFSZ         25
SIGVTALRM       26
SIGPROF         27
SIGWINCH        28
SIGIO           29
SIGPOLL         Same as SIGIO
SIGPWR          30
SIGINFO          -
SIGLOST          -
SIGSYS          31
SIGUNUSED       31
